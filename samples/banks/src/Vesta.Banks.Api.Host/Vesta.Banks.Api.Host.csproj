<Project Sdk="Microsoft.NET.Sdk.Web">

  <Import Project="..\..\common.props" />
  
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <UserSecretsId>33b3c5cd-b507-47fa-a7ed-399e07f5a945</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>1701;1702;1591</NoWarn>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Remove="Logs\**" />
    <Content Remove="Logs\**" />
    <EmbeddedResource Remove="Logs\**" />
    <None Remove="Logs\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.ApplicationInsights.Kubernetes" Version="2.0.3" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="6.0.0" NoWarn="NU1605" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.OpenIdConnect" Version="6.0.0" NoWarn="NU1605" />
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.14.0" />
    <PackageReference Include="Serilog.AspNetCore" Version="5.0.0" />
    <PackageReference Include="Serilog.Sinks.ApplicationInsights" Version="3.1.0" />
    <PackageReference Include="Serilog.Sinks.Async" Version="1.5.0" />
    <PackageReference Include="Vesta.Autofac" Version="$(VestaPackageVersion)" Condition="$(Debug) != 'True'" />
    <PackageReference Include="Vesta.ApplicationInsights.AspNetCore" Version="$(VestaPackageVersion)" Condition="$(Debug) != 'True'" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\framework\src\Vesta.Autofac\Vesta.Autofac.csproj" Condition="$(Debug) == 'True'" />
    <ProjectReference Include="..\..\..\..\framework\src\Vesta.ApplicationInsights.AspNetCore\Vesta.ApplicationInsights.AspNetCore.csproj" Condition="$(Debug) == 'True'" />  
    <ProjectReference Include="..\Vesta.Banks.Api\Vesta.Banks.Api.csproj" />
  </ItemGroup>

</Project>
